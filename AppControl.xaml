<UserControl x:Class="TurtleStart.AppControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TurtleStart"
             mc:Ignorable="d" 
             d:DesignHeight="88" Height="88" Width="64" d:DesignWidth="64">
    <Grid Background="#FF33333D">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"></RowDefinition>
            <RowDefinition Height="24"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="img" HorizontalAlignment="Center" VerticalAlignment="Center" OpacityMask="White"></Image>
        <Label x:Name="name" Grid.Row="1" Foreground="#FFD1D1D1" HorizontalAlignment="Center">123</Label>
    </Grid>
</UserControl>
